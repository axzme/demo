<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="application.properties" />

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <!--mapper文件继承的接口名称-->
        <plugin type="${mapper.plugin}">
            <property name="mappers" value="${mapper.mappers}"/>
        </plugin>
        <!--mapper代码自动生成器，数据库连接-->
        <jdbcConnection driverClass="${spring.datasource.driverClassName}"
                        connectionURL="${spring.datasource.url}"
                        userId="${spring.datasource.username}"
                        password="${spring.datasource.password}">
        </jdbcConnection>
        <!--model,mapper，xml文件生成的位置-->
        <javaModelGenerator targetPackage="com.springboot.model" targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="mapperXml" targetProject="src/main/resources"/>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.springboot.mapper" targetProject="src/main/java"/>

        <!--student为数据库表，column为数据库主键-->
        <table tableName="student" >
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
    </context>

</generatorConfiguration>
